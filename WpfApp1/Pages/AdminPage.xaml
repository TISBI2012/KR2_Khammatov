<Page x:Class="WpfApp1.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="#fff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Добро пожаловать!"
                       FontSize="40px" Margin="0 0 0 20"/>
            <TextBlock Text="Ваша роль: глава отдела"
                       FontSize="20px" Margin="0 0 0 20"/>
            <Button Content="Принять на работу сотрудника"
                    FontSize="20px"
                    Name="WorkAdminBt"
                    Click="WorkAdminBt_Click"/>
            <Button Content="Создать задачу"
                    FontSize="20px"
                    Margin="0 20 0 0"/>
            <Button Content="Списки задач сотрудникам"
                    FontSize="20px"
                    Margin="0 20 0 0"/>
        </StackPanel>
        <Frame Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Page>
